@page
@model Smiley.Pages.Company.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div >
    <h4>Company</h4>
    <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.viewcompany.companyName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.viewcompany.companyName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.viewcompany.cvr)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.viewcompany.cvr)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.viewcompany.companyAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.viewcompany.companyAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.viewcompany.allSmileyReports)
            </dt>
            <dd class="col-sm-10">

                @for (int i = 1; i < (Model.viewcompany.allSmileyReports.Count()); i++)
                {
                    if (i == 4)
                    {
                        break;
                    }

                    switch (Model.viewcompany.allSmileyReports[i].smileyFace)
                    {
                        case Smiley.Data.Models.SmileyEnum.Happy:
                            <img src="~/images/smiley1.jpg" style="max-width:50px;width:100%" />
                            break;

                        case Smiley.Data.Models.SmileyEnum.Neutral:
                            <img src="~/images/smiley2.jpg" style="max-width:50px;width:100%" />
                            break;

                        case Smiley.Data.Models.SmileyEnum.Sad:
                            <img src="~/images/smiley3.jpg" style="max-width:50px;width:100%" />
                            break;
                    }
                }
            </dd>
        <dl/>
        <hr />
        <dl>
            <dt>
                Lastest Smiley
            </dt>
            <dd>
                @if (Model.viewcompany.allSmileyReports.Count() != 0)
                {
                    @switch (Model.viewcompany.allSmileyReports[0].smileyFace)
                    {
                        case Smiley.Data.Models.SmileyEnum.Happy:
                            <img src="~/images/smiley1.jpg" style="max-width:150px;width:100%" />
                            break;

                        case Smiley.Data.Models.SmileyEnum.Neutral:
                            <img src="~/images/smiley2.jpg" style="max-width:150px;width:100%" />
                            break;

                        case Smiley.Data.Models.SmileyEnum.Sad:
                            <img src="~/images/smiley3.jpg" style="max-width:150px;width:100%" />
                            break;
                    }
                }
            </dd>
        </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.company?.id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
